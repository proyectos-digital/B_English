section(class="template-wrapper self_7" )
    aside(class="template-asideLeft o-aside-Item" ng-init="listenImage = 1; s_actividad = 1")
        button(class="c-btn-IconAction" data-activities-count="1" ng-click="s_actividad = 1" ng-class="(s_actividad == 1) ? 'is-active' : '';")
        button(class="c-btn-IconAction" data-activities-count="2" ng-click="s_actividad = 2" ng-class="(s_actividad == 2) ? 'is-active' : '';")
    |
    |
    div(class="template-section m-a")
        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 1")
            div(class="row-flex")
                div(class="col-flex-xs12 col-flex-md6 col-center md ta-j pl20 pr20")
                    div(class="row mt30")
                        div(class="row")
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  A. 
                                | I think Santurban should be protected. Don’t you agree? 
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  B. 
                                | I couldn’t agree with you more!
                        div(class="mt10 row-flex")
                            input(class="c-inputRadio" type="radio" id="inputRadio_1" name="SelInputRadio_1" value="1")
                            label(for="inputRadio_1" class="c-CheckSelected" ng-click="txtcaptura_a='down'") agreeing

                            input(class="c-inputRadio" type="radio" id="inputRadio_2" name="SelInputRadio_1" value="2")
                            label(for="inputRadio_2" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Disagreeing

                            input(class="c-inputRadio" type="radio" id="inputRadio_3" name="SelInputRadio_1" value="3")
                            label(for="inputRadio_3" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Partially agreeing
                    div(class="row mt30")
                        div(class="row")
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  A. 
                                | Santurban is a protected national park. It should be protected.
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  B. 
                                | Go on!
                        div(class="mt10 row-flex")
                            input(class="c-inputRadio" type="radio" id="inputRadio_4" name="SelInputRadio_2" value="1")
                            label(for="inputRadio_4" class="c-CheckSelected" ng-click="txtcaptura_a='down'") Changing the topic

                            input(class="c-inputRadio" type="radio" id="inputRadio_5" name="SelInputRadio_2" value="2")
                            label(for="inputRadio_5" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Inviting to continue

                            input(class="c-inputRadio" type="radio" id="inputRadio_6" name="SelInputRadio_2" value="3")
                            label(for="inputRadio_6" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Ignoring the person
                        
                    div(class="row mt30")
                        div(class="row")
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  A. 
                                | I went to the Santurban highlands last year. 
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  B. 
                                | Is there anything you’d like to add?
                        div(class="mt10 row-flex")
                            input(class="c-inputRadio" type="radio" id="inputRadio_7" name="SelInputRadio_3" value="1")
                            label(for="inputRadio_7" class="c-CheckSelected" ng-click="txtcaptura_a='down'") Inviting one-to-one interaction

                            input(class="c-inputRadio" type="radio" id="inputRadio_8" name="SelInputRadio_3" value="2")
                            label(for="inputRadio_8" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Changing the topic

                            input(class="c-inputRadio" type="radio" id="inputRadio_9" name="SelInputRadio_3" value="3")
                            label(for="inputRadio_9" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Stopping the dialogue 
                div(class="col-flex-xs12 col-flex-md6 col-center md ta-j pl20 pr20")
                    div(class="row mt30")
                        div(class="row")
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  A. 
                                | Mining should be allowed in some areas. 
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  B. 
                                | What makes you think that?
                        div(class="mt10 row-flex")
                            input(class="c-inputRadio" type="radio" id="inputRadio_10" name="SelInputRadio_4" value="1")
                            label(for="inputRadio_10" class="c-CheckSelected" ng-click="txtcaptura_a='down'") Inviting one-to-one interaction

                            input(class="c-inputRadio" type="radio" id="inputRadio_11" name="SelInputRadio_4" value="2")
                            label(for="inputRadio_11" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Contradicting

                            input(class="c-inputRadio" type="radio" id="inputRadio_12" name="SelInputRadio_4" value="3")
                            label(for="inputRadio_12" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Disagreeing
                    div(class="row mt30")
                        div(class="row")
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  A. 
                                | Some of you have expressed interest in the protection of this ecosystem. 
                            div(class="col xs12")
                                strong(class="u-textColor_4-dark")  B. 
                                | Yes, but I would like to know if this other group would like to comment on this.
                        div(class="mt10 row-flex")
                            input(class="c-inputRadio" type="radio" id="inputRadio_13" name="SelInputRadio_5" value="1")
                            label(for="inputRadio_13" class="c-CheckSelected" ng-click="txtcaptura_a='down'") agreeing

                            input(class="c-inputRadio" type="radio" id="inputRadio_14" name="SelInputRadio_5" value="2")
                            label(for="inputRadio_14" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Disagreeing

                            input(class="c-inputRadio" type="radio" id="inputRadio_15" name="SelInputRadio_5" value="3")
                            label(for="inputRadio_15" class="c-CheckSelected" ng-click="txtcaptura_a='up'") Inviting group interaction
        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 2")
            div(class="row-flex mt10-xs mt10-md mt10-sm")
                div(class="col-flex-xs12 col-flex-md12 col-center mt10-sm mt20-md ta-j")
                    img(src="unit_3/module_11/assets/images/self_6a.png", alt="" class="u-responsive-img ancho300 mt30 centrado")
                    table(class="c-table-estilo_tres m-a mt30")
                        thead
                            tr
                                th To continue
                                th Invitation in one-to-one interaction
                                th Invitation in group interaction
                        tbody
                            tr
                                td Carry on. / Go on.
                                td Don’t you agree?
                                td What do you think, (name)?
                            tr
                                td Really?
                                td Is that OK with you?
                                td Let’s hear what (name) has to say.
                            tr
                                td Tell me more.
                                td How about you?
                                td (name) might have something to say on this.
                            tr
                                td What makes you say/think that?
                                td What do you think?
                                td (name) knows a lot about this.
                            tr
                                td I’m all ears. / I’m listening
                                td Is there anything you’d like to add/comment on?
                                td (name), you did something like that, didn’t you?
        
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction u-bgIconRefresh" ng-show="s_actividad==1" ng-click="reloadClassMultiple()")
        button(class="c-btn-IconAction u-bgIconCheck" ng-show="s_actividad==1" ng-click="seleccionMulti()")
