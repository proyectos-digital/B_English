//- ============================== Mixins
include ../../../../_pug/_mixin
// ============================== templateContainer

header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper")
    aside(class="template-asideLeft o-aside-Item")
    |
    |
    div(class="template-section m-a")
        section(class="template-content")
            
            div(class="row-flex")
                div(class="col-flex-sm12 col-flex-md5 col-center showTo-md")
                    img(src="./unit_3/module_9/assets/images/test_4_1.png", alt="", srcset="" class="u-responsive-img centrado")


                div(class="col-flex-sm12 col-flex-md7 col-center") 

                    div(class="row")
                        table(class="c-table" data-ejercicio="table-truefalse")
                            thead
                                tr
                                    th 
                                    th true
                                    th false
                            tbody
                                tr
                                    td 
                                        strong(class="u-textColor_4-dark") 1. 
                                        |   An expedition left Santo Domingo to explore Texas.
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_1" name="tfInputRadio_1" value="1")
                                            label(for="inputRadio_1" class="c-CheckTrue")
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_2" name="tfInputRadio_1" value="2")
                                            label(for="inputRadio_2" class="c-CheckFalse")
                                tr
                                    td 
                                        strong(class="u-textColor_4-dark") 2.
                                        |  By splitting the crew, the captain made a mistake.
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_3" name="tfInputRadio_2" value="1")
                                            label(for="inputRadio_3" class="c-CheckTrue")
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_4" name="tfInputRadio_2" value="2")
                                            label(for="inputRadio_4" class="c-CheckFalse")

                                tr
                                    td 
                                        strong(class="u-textColor_4-dark") 3.
                                        |  Most of the men left the ships at Tampa Bay.
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_5" name="tfInputRadio_3" value="1")
                                            label(for="inputRadio_5" class="c-CheckTrue")
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_6" name="tfInputRadio_3" value="2") 
                                            label(for="inputRadio_6" class="c-CheckFalse")

                                tr
                                    td 
                                        strong(class="u-textColor_4-dark") 4.
                                        |   The two groups didn't get together again.
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_7" name="tfInputRadio_4" value="1")
                                            label(for="inputRadio_7" class="c-CheckTrue")
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_8" name="tfInputRadio_4" value="2")
                                            label(for="inputRadio_8" class="c-CheckFalse")

                                tr
                                    td 
                                        strong(class="u-textColor_4-dark") 5.
                                        |  Only a few men survived and continued to travel west.
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_9" name="tfInputRadio_5" value="1")
                                            label(for="inputRadio_9" class="c-CheckTrue")
                                    td
                                        span(class="c-textField")
                                            input(class="c-inputRadio" type="radio" id="inputRadio_10" name="tfInputRadio_5" value="2")
                                            label(for="inputRadio_10" class="c-CheckFalse")
                
    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction openNotice is-active u-bgIconInfoActivity" ng-click="idNotice = 1")
        button(class="c-btn-IconAction u-bgIconRefresh" ng-click="reloadClassMultiple()")
        button(class="c-btn-IconAction u-bgIconCheck" ng-click="seleccionMulti()")
|        
|
footer(class="template-footer" ng-controller="CtrlFooter" ng-include="'../ngMaster/footer.php'")
|
|
