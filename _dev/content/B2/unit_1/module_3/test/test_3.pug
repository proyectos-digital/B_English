                            div(class="dragCont"): div(class="drag" rescon="2") Promise
                            div(class="dragCont"): div(class="drag" rescon="1") Look forward to
                            div(class="dragCont"): div(class="drag" rescon="1") Mind
                            div(class="dragCont"): div(class="drag" rescon="2") Invite someone
                            div(class="dragCont"): div(class="drag" rescon="2") Want
                            div(class="dragCont"): div(class="drag" rescon="1") Finish

                div(class="col-flex-sm12 col-flex-md5 offset-md1 col-center")
