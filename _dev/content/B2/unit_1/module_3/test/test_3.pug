    div(class="template-section m-a" ng-init="DragandDropMultiple()")
        section(class="template-content")

            div(class="row-flex align-items-center")
                div(class="col-flex-sm12 col-flex-md6 col-center")
                    div(class="row-flex justify-around")
                            div(class="dragCont"): div(class="drag" rescon="1") Stop
                            div(class="dragCont"): div(class="drag" rescon="2") Decide
                            div(class="dragCont"): div(class="drag" rescon="2") Need
                            div(class="dragCont"): div(class="drag" rescon="2") Plan
