    div(class="template-section m-a")
        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 1")

            div(class="row-flex")
                div(class="col-flex-xs12 col-flex-md10 col-center")
                    h5 #[strong.u-textColor_4 1. ]  Complete the table with the correct form of the verbs.

                    div(class="row-flex mt20")
                        table(class="c-table-estilo_tres")
                            thead   
                                tr
                                    th(class="xs3 md4").showTo-md 
                                    th(class="xs3 sm4 md2") Future tense
                                    th(class="xs3 sm4 md3") Active
                                    th(class="xs3 sm4 md3") Passive will + have been + participle
