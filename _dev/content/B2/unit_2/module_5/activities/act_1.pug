//- ============================== Mixins
include ../../../../_pug/_mixin
// ============================== templateContainer
header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper")
    aside(class="template-asideLeft o-aside-Item")
        button(class="c-btn-IconAction" data-activities-count="1" ng-click="s_actividad = 1" ng-class="(s_actividad == 1) ? 'is-active' : '';")
        button(class="c-btn-IconAction" data-activities-count="2" ng-click="s_actividad = 2" ng-class="(s_actividad == 2) ? 'is-active' : '';")
    |
    |
    div(class="template-section m-a")
        section(class="template-content" ng-init="s_actividad = 1")
            |
            div(class="row-flex s-actividad u-animationFadeDown" ng-show="s_actividad == 1")
                
                div(class="col-flex-sm12 col-flex-md5 col-center")

                    h6 #[strong.u-textColor_4 1. ] Watch the video:

                    div(class="c-contVideo"): video(controls class="u-responsive-video")
                            source(src="unit_2/module_5/"+pathVideo+"act_1_1.mp4" type="video/mp4")

                div(class="col-flex-sm12 col-flex-md6 offset-md1 col-center")
                    h6(class="mt40") Read the following sentences. Pay attention to the words in bold:
                    
                    div(class="c-cardGreen")
                        div(class="c-cardGreenContent")
                            p 
                                | When you arrived at 7:00. 

                            p
                                | I 
                                strong had already cooked 
                                | everything.

                            p
                                | I
                                strong  had already taken
                                |  the car and they
                                strong  had already washed 
                                | the car.

                            p
                                | I
                                strong  had already 
                                | taken the dog for a walk. 


            div(class="row-flex s-actividad u-animationFadeDown" ng-show="s_actividad == 2")

                div(class="col-flex-sm12 col-flex-md6 col-center showTo-md")
                    div(class="row")
                            img(src="./unit_2/module_5/assets/images/act_1_1.png", alt="", srcset="" class="u-responsive-img centrado w80") 


                div(class="col-flex-sm12 col-flex-md6 col-center")
                    div(class="row mt20")
                        h6  #[strong.u-textColor_4 1. ] Complete the rules:

                        p(class="mt20")
                            strong(class="u-textColor_4-dark") 1.
                            |  We make the past perfect simple with
                            span(class="c-textField"): input(type="text" placeholder="Write here..." class="c-input js-escribir")
                            br
                            | + past participle.

                        p(class="mt20")
                            strong(class="u-textColor_4-dark") 2.
                            |   Negative statements are formed with had +
                            span(class="c-textField"): input(type="text" placeholder="Write here..." class="c-input js-escribir").
                            | + past participle.

                        p(class="mt20")
                            strong(class="u-textColor_4-dark") 3.
                            |  Questions are formed with 
                            span(class="c-textField"): input(type="text" placeholder="Write here..." class="c-input js-escribir")
                            br
                            | + subject +
                            span(class="c-textField"): input(type="text" placeholder="Write here..." class="c-input js-escribir").

                        p(class="mt20")
                            strong(class="u-textColor_4-dark") 4.
                            |  When adverbs are used, the past perfect simple is formed with had +
                            span(class="c-textField"): input(type="text" placeholder="Write here..." class="c-input js-escribir")
                            | +
                            span(class="c-textField"): input(type="text" placeholder="Write here..." class="c-input js-escribir").
    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction openNotice is-active u-bgIconAlert" ng-click="idNotice = 1" ng-show="s_actividad == 1")
        button(class="c-btn-IconAction u-bgIconRefresh" ng-show="s_actividad == 2" ng-click="reloadClass()")
        button(class="c-btn-IconAction u-bgIconCheck" ng-show="s_actividad == 2" ng-click="validarCompletartxt()")
|
|
footer(class="template-footer" ng-controller="CtrlFooter" ng-include="'../ngMaster/footer.php'")
|
|
div(class="c-noticeAside" id="notice")
    article(class="c-noticeAside-body" ng-include="'unit_2/module_5/activities/act_1_notice_'+ idNotice +'.php'")
    footer(class="c-noticeAside-footer"): button(class="c-btn-IconAction u-bgIconClose closeNotice")