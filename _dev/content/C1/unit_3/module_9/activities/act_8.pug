//- ============================== Mixins
include ../../../../_pug/_mixin
// ============================== templateContainer

header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper act_8" ng-init="s_actividad = 1 ; ContadorPalabras(150)")
    aside(class="template-asideLeft o-aside-Item")

    |
    |
    div(class="template-section m-a")
        |
        section(class="template-content" )
            .row

                p.ta-c
                    |The table below gives information about consumer spending on clothing and footwear in five different countries in 2012.
                    br
                    strong Summarize the information by selecting and reporting the main ideas, make comparisons where relevant. 
                    br
                    |Write a minimum of 150 words.

            .row
                .row-flex.align-items-center
                    .col.xs12.md6.ta-c
                        img(src="unit_3/module_9/assets/images/act_8_1.png" alt="" class="u-responsive-img mt30 m-a")
                    .col.xs12.md6.ta-c
                        div(class="c-wrapTextarea ")
                            textarea(placeholder="Write here..." class="campo c-textarea h200" ng-model="textousuario")
                            div(class="c-wrapTextarea__counter")
                                span(id="contador") 0
                                span(ng-bind="limitePalabras")
                                span(id="alertamensaje")
    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction u-bgIconUpload" ng-click="enviarTexto()")
|
|
footer(class="template-footer" ng-controller="CtrlFooter" ng-include="'../ngMaster/footer.php'")
