//- ============================== Mixins
include ../../../../_pug/_mixin
// ============================== templateContainer

header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper self_7")
	aside(class="template-asideLeft o-aside-Item")
	|
	|
	div(class="template-section m-a")
		section(class="template-content" ng-init="ContadorPalabras(250)")
			div(class="row row-flex mt30 align-items-center")
				.col.xs12.md6.ta-c
					img(src="unit_3/module_12/assets/images/self_7_1.png", alt="", class="u-responsive-img")
				.col.xs12.md6
					h5 You have 40 minutes for this task.
					p.u-textColor_2 We need more female leaders in Politics to reduce violence. To what extent do you agree or disagree?
					p Give reasons for your answers and include any relevant examples from your own knowledge or experience.#[br] #[strong Minimum 250 words].
					div(class="c-wrapTextarea ")
						textarea(placeholder="Write here..." class="campo c-textarea h200" ng-model="textousuario")
						div(class="c-wrapTextarea__counter")
							span(id="contador") 0 
							span(ng-bind="limitePalabras")
							span(id="alertamensaje")
	|
	|
	aside(class="template-asideRight o-aside-Item")
		button(class="c-btn-IconAction u-bgIconUpload" ng-click="enviarTexto()")
|
|
footer(class="template-footer" ng-controller="CtrlFooter" ng-include="'../ngMaster/footer.php'")
