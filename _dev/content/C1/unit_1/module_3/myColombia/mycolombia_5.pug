                        .col.xs6.md8
                            div(class="row c-ngRecorder" ng-audio-recorder id="mainAudio_c" time-limit='120' audio-model="audio_3" on-playback-start="guardarRecord('unt1_mod3_mycol3',3)"): +ngRecorder
