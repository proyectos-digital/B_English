header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper act_7" ng-init="ContadorPalabras(150)" )
    aside(class="template-asideLeft o-aside-Item")
    |
    |
    div(class="template-section m-a")
        |
        section(class="template-content")
            .row

                p.ta-c.
                    #[strong You have 20 minutes for this task].#[br]
                    The pie chart below shows the proportion of different categories of families living in poverty in Colombia in 1992.
                    Summarize the information by selecting and reporting the main features and make comparisons where relevant.#[br]
                    #[strong Minimum 150 words].
            h4.u-textColor_4.ta-c Proportion of people from each household type living in poverty.
            .row-flex.align-items-center
                .col.xs12.md6.row-flex.align-items-center.showTo-md: img(src="unit_1/module_4/assets/images/act_7_1.png" alt="" class="u-responsive-img mt30 col-center")
                .col.xs12.md6
                    div(class="c-wrapTextarea ")
                        textarea(placeholder="Write here..." class="campo c-textarea h200" ng-model="textousuario")
                        div(class="c-wrapTextarea__counter")
                            span(id="contador") 0 
                            span(ng-bind="limitePalabras")
                            span(id="alertamensaje")
    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction u-bgIconUpload" ng-click="enviarTexto()" ng-show="enviarMensaje_minPalabras")
