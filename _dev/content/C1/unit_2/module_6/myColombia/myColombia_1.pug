section(class="template-wrapper col_1" ng-init="s_actividad = 1")
    aside(class="template-asideLeft o-aside-Item")
        button(class="c-btn-IconAction" data-activities-count="1" ng-click="s_actividad = 1" ng-class="(s_actividad == 1) ? 'is-active' : '';")
        button(class="c-btn-IconAction" data-activities-count="2" ng-click="s_actividad = 2" ng-class="(s_actividad == 2) ? 'is-active' : '';")
        button(class="c-btn-IconAction" data-activities-count="3" ng-click="s_actividad = 3" ng-class="(s_actividad == 3) ? 'is-active' : '';")
    |
    |
    div(class="template-section m-a")
        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 1")
            .row
                .col.xs12.sm8.col-center
                    h5 #[strong.u-textColor_4 1. ] Watch to the following weather forecasts and try to determine which city the forecast is most likely about.
                    div(class="row mt20 sm11 md8 lg9 hd12 col-center")
                        div(class="c-contVideo")
                            video(controls class="u-responsive-video")
                                source(src="unit_2/module_6/"+pathVideo+"col_1_1.mp4" type='video/mp4')
                                | Your browser does not support the video element.
                    h5.mt30 Choose the correct response:
                    .row.mt30.row-flex
                        input(class="c-inputRadio" type="radio" id="inputRadio_1" name="SelInputRadio_1" value="1")
                        label(for="inputRadio_1" class="c-CheckSelected col-flex ml10 mr10") Bogota
                        input(class="c-inputRadio" type="radio" id="inputRadio_2" name="SelInputRadio_1" value="2")
                        label(for="inputRadio_2" class="c-CheckSelected col-flex ml10 mr10") Medellin
                        input(class="c-inputRadio" type="radio" id="inputRadio_3" name="SelInputRadio_1" value="3")
                        label(for="inputRadio_3" class="c-CheckSelected col-flex ml10 mr10") Barranquilla

        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 2")
             .row
                .col.xs12.sm8.col-center
                    h5 #[strong.u-textColor_4 2. ] Watch to the following weather forecasts and try to determine which city the forecast is most likely about.
                    div(class="row mt20 sm11 md8 lg9 hd12 col-center"): div(class="c-contVideo"): video(controls class='u-responsive-video')
                         source(src='unit_2/module_6/assets/videos/col_1_2.mp4' type='video/mp4')
                    h5.mt30 Choose the correct response:
                    .row.mt30.row-flex
                        input(class="c-inputRadio" type="radio" id="inputRadio_4" name="SelInputRadio_2" value="1")
                        label(for="inputRadio_4" class="c-CheckSelected col-flex ml10 mr10") Bogota
                        input(class="c-inputRadio" type="radio" id="inputRadio_5" name="SelInputRadio_2" value="2")
                        label(for="inputRadio_5" class="c-CheckSelected col-flex ml10 mr10") Medellin
                        input(class="c-inputRadio" type="radio" id="inputRadio_6" name="SelInputRadio_2" value="3")
                        label(for="inputRadio_6" class="c-CheckSelected col-flex ml10 mr10") Cartagena

        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 3")
            .row
                .col.xs12.sm8.col-center
                    h5 #[strong.u-textColor_4 3. ] Watch to the following weather forecasts and try to determine which city the forecast is most likely about.
                    div(class="row mt20 sm11 md8 lg9 hd12 col-center"): div(class="c-contVideo"): video(controls class='u-responsive-video')
                         source(src='unit_2/module_6/assets/videos/col_1_3.mp4' type='video/mp4')
                    h5.mt30 Choose the correct response:
                    .row.mt30.row-flex
                        input(class="c-inputRadio" type="radio" id="inputRadio_7" name="SelInputRadio_3" value="1")
                        label(for="inputRadio_7" class="c-CheckSelected col-flex ml10 mr10") Sierra Nevada de Santa Marta
                        input(class="c-inputRadio" type="radio" id="inputRadio_8" name="SelInputRadio_3" value="2")
                        label(for="inputRadio_8" class="c-CheckSelected col-flex ml10 mr10") Medellin
                        input(class="c-inputRadio" type="radio" id="inputRadio_9" name="SelInputRadio_3" value="3")
                        label(for="inputRadio_9" class="c-CheckSelected col-flex ml10 mr10") Barranquilla
    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction u-bgIconRefresh" ng-click="reloadClassMultiple()")
        button(class="c-btn-IconAction u-bgIconCheck" ng-click="seleccionMulti()")
