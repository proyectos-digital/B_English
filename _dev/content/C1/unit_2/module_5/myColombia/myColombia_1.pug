include ../../../../_pug/_mixin
// ============================== templateContainer

header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper col_1" ng-init="s_actividad = 1")
    aside(class="template-asideLeft o-aside-Item")
        button(class="c-btn-IconAction" data-activities-count="1" ng-click="s_actividad = 1" ng-class="(s_actividad == 1) ? 'is-active' : '';")
        button(class="c-btn-IconAction" data-activities-count="2" ng-click="s_actividad = 2" ng-class="(s_actividad == 2) ? 'is-active' : '';")
    |
    |
    div(class="template-section m-a")
        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 1")
            .row
                .col.xs12.sm11.col-center
                    h5 Watch the following video:
                    div(class="row mt20 col-center"): div(class="c-contVideo"): video(controls class='u-responsive-video')
                         source(src='unit_2/module_5/assets/videos/col_1_1.mp4' type='video/mp4') 

        section(class="template-content u-animationFadeDown" ng-show="s_actividad == 2")
            .row
                .col.xs12.sm8.col-center
                    h5 What type of vacation do you like?
                    span Tick the vacation that you would enjoy the most. You can choose as many as you want. 
                    table(class="c-table-estilo_tres mt30 ta-c m-a")
                        tbody
                            tr
                                td.ta-l: strong Camping in the Amazon on the “Wild Amazon adventure”.
                                td.w10
                                    input(type="checkbox" class="c-inputCheckbox" id="inputRadio_1"  name="selInputRadio_1" value="1") 
                                    label(for="inputRadio_1" class="c-Checkbox w100 min-h40 mt0")
                            tr
                                td.ta-l: strong Extreme sports, paintball, rock climbing, rafting at “X-treme Adventures”.
                                td.w10
                                    input(type="checkbox" class="c-inputCheckbox" id="inputRadio_2"  name="selInputRadio_2" value="2") 
                                    label(for="inputRadio_2" class="c-Checkbox w100 min-h40 mt0")
                            tr
                                td.ta-l: strong The beach bunny package, sun sand and sea at “ The Caribbean beach hotel”.
                                td.w10
                                    input(type="checkbox" class="c-inputCheckbox" id="inputRadio_3"  name="selInputRadio_3" value="3") 
                                    label(for="inputRadio_3" class="c-Checkbox w100 min-h40 mt0")
                            tr 
                                td.ta-l: strong Enjoy city tours, museums, fine dining, tickets to the latest plays and theatre events in “A vacation for the sophisticated”.
                                td.w10
                                    input(type="checkbox" class="c-inputCheckbox" id="inputRadio_4"  name="selInputRadio_4" value="4") 
                                    label(for="inputRadio_4" class="c-Checkbox w100 min-h40 mt0")
                            tr
                                td.ta-l: strong Visiting family and friend outside the city, spending time with family and friends.
                                td.w10
                                    input(type="checkbox" class="c-inputCheckbox" id="inputRadio_5"  name="selInputRadio_5" value="5") 
                                    label(for="inputRadio_5" class="c-Checkbox w100 min-h40 mt0")
                    |
                    h5 Why did you choose that vacation and who would you go with? 
                    div(class="c-wrapTextarea mt30"): textarea(placeholder="Write here..." class="c-textarea h200" ng-model="textousuario")

        
                    
                    

    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction u-bgIconUpload" ng-click="enviarTexto()")
|
|
footer(class="template-footer" ng-controller="CtrlFooter" ng-include="'../ngMaster/footer.php'")
