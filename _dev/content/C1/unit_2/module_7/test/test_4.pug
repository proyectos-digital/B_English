include ../../../../_pug/_mixin
// ============================== templateContainer

header(class="template-header" ng-controller="CtrlHeader" ng-include="'../ngMaster/header.php'")
|
|
section(class="template-wrapper test_4" ng-init="ContadorPalabras(250)")
    aside(class="template-asideLeft o-aside-Item")
    |
    |
    div(class="template-section m-a")
        section(class="template-content")

            div(class="row row-flex mt30")

                .col.xs12.md6.ta-c.mt30
                    img(src="unit_2/module_7/assets/images/test_4_1.png", alt="", class="u-responsive-img")
                .col.xs12.md6
                    h5 You have 40 minutes for this task. Write about the following topic:
                    p.u-textColor_2 Modern technology now allows rapid and uncontrolled access to information. Far from being beneficial, this is a danger to our societies. To what extent do you agree or disagree?
                    p Give reasons for your answers and include any relevant examples from your own knowledge or experience.#[br] #[strong Minimum 250 words].
                    div(class="c-wrapTextarea ")
                        textarea(placeholder="Write here..." class="campo c-textarea h200" ng-model="textousuario")
                        div(class="c-wrapTextarea__counter")
                            span(id="contador") 0 
                            span(ng-bind="limitePalabras")
                            span(id="alertamensaje")
    |
    |
    aside(class="template-asideRight o-aside-Item")
        button(class="c-btn-IconAction u-bgIconCheck" ng-click="enviarTexto()" ng-show="enviarMensaje_minPalabras")
|
|
footer(class="template-footer" ng-controller="CtrlFooter" ng-include="'../ngMaster/footer.php'")