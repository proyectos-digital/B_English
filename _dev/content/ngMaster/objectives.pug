section(class="template-wrapper obj_1")
    div(class="template-section m-a")
        section(class="template-content")

            div(class="row-flex c-moduleObjetive")
                div(class="col-flex-md7 showTo-md")
                    figure(class="c-figure-Rombo")
                            div(class="c-figure-RomboRotate") 
                                img(ng-src="unit_{{unidadid}}/module_{{moduloid}}/assets/images/obj_1.png", alt="" class="c-figure-RomboImage")
                div(class="col-flex-md5 col-flex-xs12 col-flex-sm7 col-center")
                    div(class="row") 
                        div(class="c-moduleObjetive-title"): img(src=""+appPathImage+"obj_title.png", alt="" class="u-responsive-img c-moduleObjetive-img")
                        ul(class="c-moduleObjetive-description browser-default" ng-repeat="objetive in objectivesModules")
                            li(class="c-moduleObjetive-items") {{objetive.title}}
                            li(class="c-moduleObjetive-items" ng-repeat="listObjetive in objetive.objectives") {{ listObjetive.objectives }}
                        div(class="ta-r"): button(class="c-btn mr100" ui-sref="activities({Unidad_id: unidadid, Module_id: moduloid, Activity_id: 1})") Go to activities
